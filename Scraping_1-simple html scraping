    "content = soup.find('div', {\"class\": \"entry-content\"})\n",
    "\n",
    "article = ''\n",
    "for i in content.findAll('p'):\n",
    "    article = article + ' ' +  i.text\n",
    "    \n",
    "with open('scraped_text.txt', 'w') as file:\n",
    "    file.write(article)"
